    "jfall-conference-advisor": {
      "command": "java",
      "args":["-jar",
        "-DOPENAI_API_KEY=${env:OPENAI_API_KEY}",
        "-Dspring.profiles.active=default,stdio",
        "/Users/urs/.m2/repository/com/example/spring-mcp-server/0.0.1-SNAPSHOT/spring-mcp-server-0.0.1-SNAPSHOT.jar"]
    },
    "filesystem": {
      "command": "/usr/local/bin/npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/urs/Desktop",
        "/Users/urs/Downloads"
      ]
    },
    // Browser MCP server configuration
    "browsermcp": {
      "command": "npx",
      "args": ["@browsermcp/mcp@latest"]
    },
    "googlemaps": {
      "command": "docker",
      "args":[
        "run",
        "-i",
        "-e",
        "GOOGLE_MAPS_API_KEY=${env:GOOGLE_MAPS_API_KEY}",
        "mcp/google-maps"]
    },
    "google-sheets": {
      "command": "uvx",
      "args": ["mcp-google-sheets@latest"],
      "env": {
        "SERVICE_ACCOUNT_PATH": "${env:SERVICE_ACCOUNT_PATH}",
        "DRIVE_FOLDER_ID": "${env:DRIVE_FOLDER_ID}"
      }
    },
    "google-slides": {
      "transportType": "stdio",
      "command": "node",
      "args": ["/Users/urs/development/github/ai/mcp/google-slides-mcp/build/index.js"],
      "env": {
        "GOOGLE_CLIENT_ID": "${env:GOOGLE_CLIENT_ID}",
        "GOOGLE_CLIENT_SECRET": "${env:GOOGLE_CLIENT_SECRET}",
        "GOOGLE_REFRESH_TOKEN": "${env:GOOGLE_REFRESH_TOKEN}"
      }
    }

  }
